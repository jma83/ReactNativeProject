{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app": [
        "."
      ],
      "@src": [
        "./src/*"
      ],
      "@application": [
        "./src/application/*"
      ],
      "@components": [ 
        "./src/components/*"
      ],
      "@screens": [
        "./src/screens/*"
      ],
      "@utils": [
        "./src/utils/*"
      ],
      "@assets": [
        "./assets/*"
      ]
    }
  },
  "include": [
    "src/*",
    "assets/*"
  ],
  "exclude": [
    "node_modules"
  ]
}